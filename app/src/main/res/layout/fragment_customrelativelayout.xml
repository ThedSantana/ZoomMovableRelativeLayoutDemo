<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.replaid.multitouchlayoutdemo.app.CustomView.ZoomMovableRelativeLayout
        android:id="@+id/custom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ferrari_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ferrari"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ferrari_logo"
            android:layout_alignLeft="@id/ferrari_logo"
            android:layout_alignRight="@id/ferrari_logo"
            android:gravity="center"
            android:text="Ferrari"/>

    </com.replaid.multitouchlayoutdemo.app.CustomView.ZoomMovableRelativeLayout>
</RelativeLayout>